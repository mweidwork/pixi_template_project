[workspace]
name = "{{ project_package_name }}"
channels = ["conda-forge"]
platforms = ["linux-64", "win-64"]

[tasks]
postinstall = { cmd = "pip install --no-build-isolation --no-deps --disable-pip-version-check -e ."}

[dependencies]
python = ">={{ minimal_python_version }}"
pip = "*"
setuptools = ">=61"
setuptools-scm = "*"

[feature.test.dependencies]
pytest = ">=6"
pytest-cov = "*"
mypy = "*"

[feature.test.tasks]
test = "pytest"
test-coverage = "pytest --cov={{ project_package_name_snake_case }} --cov-report=xml --cov-report=term-missing"

[feature.lint.dependencies]
pre-commit = "*"
insert-license-header = "*"
docformatter = "*"
ruff = "*"
prettier = "*"
taplo = "*"
pre-commit-hooks = "*"
typos = "*"

[feature.lint.tasks]
pre-commit-install = "pre-commit install"
pre-commit-run = "pre-commit run -a"

[environments]
default = ["test"]
test = ["test"]
lint = { features = ["lint"], no-default-feature = true }